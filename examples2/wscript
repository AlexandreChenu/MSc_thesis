#! /usr/bin/env python
import sys
import os
import sferes
sys.path.insert(0, sys.path[0]+'/waf_tools')
print sys.path[0]


from waflib.Configure import conf

def build(bld):
    

    # ex_qd
    bld.program(features = 'cxx',
                source = 'ex_qd.cpp',
                includes = '. ../../',
                uselib = 'TBB BOOST EIGEN PTHREAD MPI',
                use = 'sferes2',
                target = 'ex_qd')
    #test_nn
    bld.program(features = 'cxx',
                source = 'test_nn.cpp',
                includes = '. ../../',
                uselib = 'TBB BOOST EIGEN PTHREAD MPI',
                use = 'sferes2',
                target = 'test_nn')

    bld.program(features = 'cxx',
                source = 'test_xor.cpp',
                includes = '. ../../',
                uselib = 'TBB BOOST EIGEN PTHREAD MPI',
                use = 'sferes2',
                target = 'test_xor')

    bld.program(features = 'cxx',
                source = 'ex_behav_nn.cpp',
                includes = '. ../../',
                uselib = 'TBB BOOST EIGEN PTHREAD MPI',
                use = 'sferes2',
                target = 'ex_behav_nn')

    bld.program(features = 'cxx',
                source = 'test_model.cpp',
                includes = '. ../../',
                uselib = 'TBB BOOST EIGEN PTHREAD MPI',
                use = 'sferes2', 
                target = 'test_model')

    bld.program(features = 'cxx',
                source = 'test_serial.cpp',
                includes = '. ../../',
                uselib = 'TBB BOOST EIGEN PTHREAD MPI',
                use = 'sferes2',
                target = 'test_serial')
    bld.program(features = 'cxx',
                source = 'test_sampling.cpp',
                uselib = 'TBB BOOST EIGEN PTHREAD MPI',
                use = 'sferes2',
                target = 'test_sampling')

